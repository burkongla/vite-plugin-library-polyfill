{
    "name": "@burkongla/vite-plugin-library-polyfill",
    "version": "2.1.0",
    "main": "build/vite-plugin-library-polyfill.cjs.js",
    "module": "build/vite-plugin-library-polyfill.esm.js",
    "typings": "build/types/vite-plugin-library-polyfill.d.ts",
    "author": "Spencer17x <1253478653@qq.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/Spencer17x/vite-plugin-library-polyfill"
    },
    "homepage": "https://github.com/Spencer17x/vite-plugin-library-polyfill#readme",
    "keywords": [
        "rollup",
        "vite",
        "vite-plugin",
        "polyfill",
        "typescript",
        "library"
    ],
    "files": [
        "build",
        "package.json",
        "README.md",
        "README-en.md"
    ],
    "scripts": {
        "clean": "rimraf build",
        "build:prod": "yarn clean && rollup -c rollup.config.ts --silent --environment NODE_ENV:prod",
        "build:test": "yarn clean && rollup -c rollup.config.ts --silent --environment NODE_ENV:test",
        "build:dev": "yarn clean && rollup -c rollup.config.ts --silent --environment NODE_ENV:dev",
        "test": "jest --passWithNoTests",
        "coverage": "jest --coverage",
        "test:watch": "jest --coverage --watch",
        "tsc": "tsc -init",
        "deploy-docs": "ts-node tools/gh-pages-publish"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@babel/generator": "^7.15.4",
        "@jest/types": "^27.1.1",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-replace": "^2.4.2",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.2",
        "colors": "^1.4.0",
        "jest": "^27.0.4",
        "jest-config": "^27.0.4",
        "lodash.camelcase": "^4.3.0",
        "prompt": "^1.1.0",
        "replace-in-file": "^6.2.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.51.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "rollup-plugin-uglify": "^6.0.4",
        "shelljs": "^0.8.4",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.0.0",
        "tslib": "^2.2.0",
        "typescript": "^4.3.2",
        "vite": "^2.5.6"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverageFrom": [
            "src/*.{js,ts}"
        ]
    },
    "dependencies": {
        "esbuild": "^0.12.26"
    },
    "publishConfig": {
        "@burkongla:registry": "https://npm.pkg.github.com"
    }
}
